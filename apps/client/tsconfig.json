{
  "extends": "@pe/typescript/base",
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "lighthouserc.js"
  ],
  "exclude": ["node_modules"]
}
